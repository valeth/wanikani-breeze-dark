# for the sake of sanity

# topmost editorconfig file
root = true

# always use Unix-style newlines,
# use 4 spaces for indentation
# and encode files with UTF-8
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
